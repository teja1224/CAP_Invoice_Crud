<mvc:View xmlns:mvc="sap.ui.core.mvc" 
          xmlns="sap.m" 
          controllerName="ns.invoiceui.controller.Login">

    <Page showHeader="false">
        <VBox alignItems="Center" justifyContent="Center" width="100%" height="100%">
            <Panel headerText="Invoice App" class="sapUiResponsiveMargin" height="250px" width="450px">
                <VBox class="sapUiSmallMargin" width="100%">
                    <Input id="emailInput" placeholder="Enter Email" type="Email"/>
                    <Input id="passwordInput" class="sapUiSmallMarginTop" type="Password" placeholder="Enter Password"/>
                    
                    <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginTop">
                        <Button text="Login" type="Emphasized" press="onLogin"/>
                        <!-- <Label text="Don't have account" class="sapUiSmallMarginEnd"></Label> -->
                        <Button text="Register" press="onOpenRegister"/>
                    </HBox>
                </VBox>
            </Panel>
        </VBox>
    </Page>
</mvc:View>
