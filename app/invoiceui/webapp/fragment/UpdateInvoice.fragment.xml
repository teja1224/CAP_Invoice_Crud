<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog id="updateDialog" title="Update Invoice" draggable="true" resizable="true" contentWidth="400px" contentHeight="400px">
    <VBox class="sapUiSmallMargin">
      <Label text="Invoice Number"/>
      <Input id="updateInvoiceNumber" editable="false" />

      <Label text="Date" required="true"/>
      <DatePicker valueFormat="yyyy-MM-dd" id="updateDate" change="onDateChange" required="true"/>


      <Label text="Amount" required="true"/>
      <Input id="updateAmount" type="Number" required="true" liveChange="onAmountLiveChange"/>

      <Label text="Status" required="true"/>
      <Select id="updateStatus" width="100%" required="true">
        <items>
          <core:Item key="Pending" text="Pending"/>
          <core:Item key="Paid" text="Paid"/>
        </items>
      </Select>

    </VBox>
    <beginButton>
      <Button text="Submit" press="onUpdateSubmit"/>
    </beginButton>
    <endButton>
      <Button text="Cancel" press="onUpdateCancel"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
