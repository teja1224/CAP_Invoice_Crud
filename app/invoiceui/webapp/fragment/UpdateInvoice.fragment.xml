<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog id="updateDialog" title="Update Invoice" draggable="true" resizable="true" contentWidth="400px" contentHeight="300px">
    <VBox class="sapUiSmallMargin">
      <Label text="Invoice Number"/>
      <Input id="updateInvoiceNumber" editable="false" />

      <Label text="Date"/>
      <DatePicker id="updateDate" valueFormat="yyyy-MM-dd" />

      <Label text="Amount"/>
      <Input id="updateAmount" type="Number" />

    </VBox>
    <beginButton>
      <Button text="Submit" press="onUpdateSubmit"/>
    </beginButton>
    <endButton>
      <Button text="Cancel" press="onUpdateCancel"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
